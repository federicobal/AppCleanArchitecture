<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        app:layoutDescription="@xml/gallery_bottomsheet_scene"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_keyboard_arrow_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/dial_pad"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/bluedark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <Button
            android:id="@+id/button1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="1"
            app:layout_constraintEnd_toStartOf="@id/button2"
            app:layout_constraintStart_toStartOf="@id/dial_pad"
            app:layout_constraintTop_toTopOf="@id/button2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="2"
            android:textColor="#263238"
            app:layout_constraintEnd_toStartOf="@id/button3"
            app:layout_constraintStart_toEndOf="@id/button1"
            app:layout_constraintTop_toTopOf="@id/button3" />

        <Button
            android:id="@+id/button3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@id/button6"
            app:layout_constraintEnd_toEndOf="@id/dial_pad"
            app:layout_constraintStart_toEndOf="@id/button2"
            app:layout_constraintTop_toTopOf="@id/dial_pad" />

        <Button
            android:id="@+id/button4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="4"
            app:layout_constraintEnd_toStartOf="@id/button5"
            app:layout_constraintStart_toStartOf="@id/dial_pad"
            app:layout_constraintTop_toTopOf="@id/button5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="5"
            app:layout_constraintEnd_toStartOf="@id/button6"
            app:layout_constraintStart_toEndOf="@id/button4"
            app:layout_constraintTop_toTopOf="@id/button6" />

        <Button
            android:id="@+id/button6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@id/button9"
            app:layout_constraintEnd_toEndOf="@id/dial_pad"
            app:layout_constraintStart_toEndOf="@id/button5"
            app:layout_constraintTop_toBottomOf="@id/button3" />

        <Button
            android:id="@+id/button7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="7"
            app:layout_constraintEnd_toStartOf="@id/button8"
            app:layout_constraintStart_toStartOf="@id/dial_pad"
            app:layout_constraintTop_toTopOf="@id/button8" />

        <Button
            android:id="@+id/button8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="8"
            app:layout_constraintEnd_toStartOf="@id/button9"
            app:layout_constraintStart_toEndOf="@id/button7"
            app:layout_constraintTop_toTopOf="@id/button9" />

        <Button
            android:id="@+id/button9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="9"
            app:layout_constraintBottom_toTopOf="@id/button12"
            app:layout_constraintEnd_toEndOf="@id/dial_pad"
            app:layout_constraintStart_toEndOf="@id/button8"
            app:layout_constraintTop_toBottomOf="@id/button6" />

        <Button
            android:id="@+id/button10"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="*"
            app:layout_constraintEnd_toStartOf="@id/button11"
            app:layout_constraintStart_toStartOf="@id/dial_pad"
            app:layout_constraintTop_toTopOf="@id/button11" />

        <Button
            android:id="@+id/button11"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="0"
            app:layout_constraintEnd_toStartOf="@id/button12"
            app:layout_constraintStart_toEndOf="@id/button10"
            app:layout_constraintTop_toTopOf="@id/button12" />

        <Button
            android:id="@+id/button12"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/bluelight"
            android:text="#"
            app:layout_constraintBottom_toBottomOf="@id/dial_pad"
            app:layout_constraintEnd_toEndOf="@id/dial_pad"
            app:layout_constraintStart_toEndOf="@id/button11"
            app:layout_constraintTop_toBottomOf="@id/button9" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>